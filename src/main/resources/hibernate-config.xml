      <mapping class="ru.bisha.easycrm.db.entity.ClientEnitiy"/>
      <mapping class="ru.bisha.easycrm.db.entity.DeviceEntity"/>
      <mapping class="ru.bisha.easycrm.db.entity.ItemEntity"/>
      <mapping class="ru.bisha.easycrm.db.entity.OrderEntity"/>
      <mapping class="ru.bisha.easycrm.db.entity.ServiceEntity"/>
      <mapping class="ru.bisha.easycrm.db.entity.WorkerEntity"/>
    <mapping class="ru.bisha.easycrm.db.entity.StatusEntity"/>
      <!-- <property name="connection.username"/> -->
    <!-- <property name="connection.password"/> -->

    <!-- DB schema will be updated if needed -->
    <!-- <property name="hibernate.hbm2ddl.auto">update</property> -->
  </session-factory>
</hibernate-configuration>